# Рекурсивная сумма элементов массива
def sum_array(arr, index=0):
    
    # Базовый случай
    if index == len(arr):
        return 0
    # Рекурсивный случай
    return arr[index] + sum_array(arr, index + 1)

# Альтернативная версия (без индекса)
def sum_array_v2(arr):
    if not arr:
        return 0
    return arr[0] + sum_array_v2(arr[1:])

# Тестирование
print(sum_array([1, 2, 3, 4, 5]))  # Вывод: 15
print(sum_array_v2([1, 2, 3]))     # Вывод: 6
